<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_nav_graph"
    app:startDestination="@+id/navigation_steps">

    <fragment
        android:id="@+id/navigation_steps"
        android:name="com.example.androidhealth.ui.steps.StepsFragment"
        android:label="@string/title_steps"
        tools:layout="@layout/fragment_steps" />

    <fragment
        android:id="@+id/navigation_pulse"
        android:name="com.example.androidhealth.ui.pulse.PulseFragment"
        android:label="@string/title_pulse"
        tools:layout="@layout/fragment_pulse" />

    <fragment
        android:id="@+id/navigation_sleep"
        android:name="com.example.androidhealth.ui.sleep.SleepFragment"
        android:label="@string/title_sleep"
        tools:layout="@layout/fragment_sleep" />

    <fragment
        android:id="@+id/navigation_details"
        android:name="com.example.androidhealth.ui.details.DetailsFragment"
        android:label="@string/title_details"
        tools:layout="@layout/fragment_details" />

    <action
        android:id="@+id/toDetails"
        app:destination="@id/navigation_details" />
</navigation>